</html>

<script>
    
    $( "#click" ).click(function() {
        if($('#input').val().trim() == '') {
            alert('Please input text');
            return;
        }
        $.confirm({
            content: function () {
                var self = this;
                return $.ajax({
                    url : "/translate",
                    type : "post",
                    dataType:"text",
                    data : {
                        input_translate : $('#input').val(),
                        input_lang: $('#source-language-selector1').val(),
                        output_lang: $('#source-language-selector2').val(),
                    }
                }).done(function (result) {
                    var data = JSON.parse(result);

                    self.setTitle('[English -> Vietnamese]');
                    self.setContent(`Input: ${JSON.parse(data.data).input}`);
                    self.setContentAppend(`<br>Translate: ${JSON.parse(data.data).translation}`);
                }).fail(function (error) {
                    console.log('error'+ error);
                    self.setContent('Something went wrong.'+ JSON.stringify(error));
                })
            }
        });
    });


</script>
